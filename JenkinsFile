pipeline {
    agent any
    
    tools {
        // This adds Gradle to your PATH automatically, handling spaces for you
        gradle 'LocalGradle' 
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                // Now you can just use 'gradle.bat' directly
                bat 'gradle.bat clean build' 
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'build/libs/*.jar', fingerprint: true
            }
        }
    }
}
