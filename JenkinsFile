pipeline {
    agent any
    
    tools {
        // This adds Gradle to your PATH automatically, handling spaces for you
        gradle 'LocalGradle' 
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build & Test') {
            steps {
                bat 'gradle.bat clean test jacocoTestReport'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                bat 'gradle.bat sonar'
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'build/libs/*.jar', fingerprint: true
            }
        }
    }
}
